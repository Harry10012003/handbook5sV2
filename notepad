    </div>

    <div id="lightbox" class="fixed inset-0 bg-black bg-opacity-75 flex items-center justify-center p-4 z-50 hidden">
        <span id="lightbox-close" class="absolute top-4 right-4 text-white text-3xl font-bold cursor-pointer">&times;</span>
        <img id="lightbox-img" src="" alt="Ph√≥ng to h√¨nh ·∫£nh" class="max-w-full max-h-full rounded-lg">
    </div>

    <div id="progress-popup" class="fixed bottom-5 left-1/2 -translate-x-1/2 w-full max-w-sm p-4 rounded-lg shadow-2xl text-center font-semibold opacity-0 transform translate-y-4 pointer-events-none" style="background-color: #1e293b; color: white; transition: all 0.4s ease-in-out;">
        <p id="progress-popup-icon" class="text-4xl mb-2"></p>
        <p id="progress-popup-message" class="text-base"></p>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const mainNavLinks = document.querySelectorAll('.nav-link');
            const mobileNavLinks = document.querySelectorAll('.mobile-nav-link');
            const contentSections = document.querySelectorAll('.content-section');
            const mobileMenuButton = document.getElementById('mobile-menu-button');
            const mobileMenu = document.getElementById('mobile-menu');

            function setActiveSection(targetId) {
                contentSections.forEach(section => {
                    section.classList.toggle('active', section.id === targetId);
                });
                mainNavLinks.forEach(link => {
                    link.classList.toggle('active', link.dataset.target === targetId);
                });
                mobileNavLinks.forEach(link => {
                    link.classList.toggle('bg-emerald-100', link.dataset.target === targetId);
                });
                window.scrollTo({ top: 0, behavior: 'smooth' });
            }

            function showSectionFromHash() {
                const hash = window.location.hash.substring(1);
                const targetId = (document.getElementById(hash) && document.getElementById(hash).classList.contains('content-section')) ? hash : 'gioi-thieu';
                
                if (!document.getElementById(targetId)) {
                    setActiveSection('gioi-thieu');
                    return;
                }
                
                setActiveSection(targetId);

                if (!window.location.hash || window.location.hash === '#') {
                    history.replaceState(null, null, '#gioi-thieu');
                }
            }

            function handleNavClick(e) {
                e.preventDefault();
                const targetId = e.currentTarget.dataset.target;
                window.location.hash = targetId;
                if (mobileMenu && !mobileMenu.classList.contains('hidden')) {
                    mobileMenu.classList.add('hidden');
                }
            }
            
            mainNavLinks.forEach(link => link.addEventListener('click', handleNavClick));
            mobileNavLinks.forEach(link => link.addEventListener('click', handleNavClick));
            window.addEventListener('hashchange', showSectionFromHash, false);

            mobileMenuButton.addEventListener('click', () => {
                mobileMenu.classList.toggle('hidden');
            });

            const tabLinks = document.querySelectorAll('.tab-link');
            const tabContents = document.querySelectorAll('.tab-content');

            function setActiveTab(app, targetId) {
                document.querySelectorAll(`.tab-link[data-app="${app}"]`).forEach(link => {
                    link.classList.toggle('active', link.dataset.target === targetId);
                });
                document.querySelectorAll(`.tab-content[data-app="${app}"]`).forEach(content => {
                    content.classList.toggle('active', content.id === `${app}-${targetId}`);
                });
            }

            tabLinks.forEach(link => {
                link.addEventListener('click', function(e) {
                    e.preventDefault();
                    const app = this.dataset.app;
                    const targetId = this.dataset.target;
                    setActiveTab(app, targetId);
                });
            });

            const emailInput = document.getElementById('email-input');
            const co2Result = document.getElementById('co2-result');
            const feedbackPopup = document.getElementById('feedback-popup');
            const popupMessage = document.getElementById('popup-message');
            const popupIcon = document.getElementById('popup-icon');
            const CO2_PER_EMAIL_GRAMS = 0.3;
            let popupTimeout;

            emailInput.addEventListener('input', function() {
                clearTimeout(popupTimeout);
                const emailCount = parseInt(this.value, 10);

                if (isNaN(emailCount) || emailCount <= 0) {
                    co2Result.textContent = '0';
                    feedbackPopup.classList.add('opacity-0', 'translate-y-2');
                    return;
                }
                
                const totalCo2 = emailCount * CO2_PER_EMAIL_GRAMS;
                co2Result.textContent = totalCo2.toFixed(1).replace('.', ',');

                let message = '';
                let icon = '';
                if (emailCount >= 1 && emailCount <= 5) {
                    message = 'Danh hi·ªáu: M·∫ßm Xanh √ù Th·ª©c';
                    icon = ' ';
                } else if (emailCount > 5 && emailCount <= 10) {
                    message = 'Danh hi·ªáu: Anh H√πng Tinh G·ªçn';
                    icon = '‚ú®';
                } else if (emailCount > 10) {
                    message = 'Danh hi·ªáu: ƒê·∫°i S·ª© 5S';
                    icon = ' ';
                }

                if (message) {
                    popupMessage.textContent = message;
                    popupIcon.textContent = icon;
                    feedbackPopup.classList.remove('opacity-0', 'translate-y-2');
                    
                    popupTimeout = setTimeout(() => {
                        feedbackPopup.classList.add('opacity-0', 'translate-y-2');
                    }, 5000);
                } else {
                     feedbackPopup.classList.add('opacity-0', 'translate-y-2');
                }
            });

            const lightbox = document.getElementById('lightbox');
            const lightboxImg = document.getElementById('lightbox-img');
            const lightboxClose = document.getElementById('lightbox-close');
            const greenLogoThumb = document.getElementById('green-logo-thumb');
            const posterThumb = document.getElementById('poster-thumb');

            function openLightbox(src) {
                lightboxImg.src = src;
                lightbox.classList.remove('hidden');
            }

            function closeLightbox() {
                lightbox.classList.add('hidden');
            }

            if (greenLogoThumb) {
                greenLogoThumb.addEventListener('click', function() { openLightbox(this.src); });
            }
            if (posterThumb) {
                posterThumb.addEventListener('click', function() { openLightbox(this.src); });
            }
            if (lightboxClose) {
                lightboxClose.addEventListener('click', closeLightbox);
            }
            if (lightbox) {
                lightbox.addEventListener('click', function(e) {
                    if (e.target === lightbox) {
                        closeLightbox();
                    }
                });
            }
            
            const dButtons = document.querySelectorAll('.d-button');
            dButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetId = this.dataset.target;
                    const targetContent = document.getElementById(targetId);
                    const isActive = this.classList.contains('active');
                    
                    document.querySelectorAll('.d-button').forEach(btn => {
                        const contentId = btn.dataset.target;
                        document.getElementById(contentId).classList.add('hidden');
                        btn.classList.remove('active');
                    });

                    if (!isActive) {
                        targetContent.classList.remove('hidden');
                        this.classList.add('active');
                    }
                });
            });

            const collapsibleButtons = document.querySelectorAll('.collapsible-button');
            collapsibleButtons.forEach(button => {
                button.addEventListener('click', function() {
                    const targetId = this.dataset.target;
                    const content = document.getElementById(targetId);
                    const arrow = this.querySelector('.arrow-span');
                    
                    if (content) {
                        const isHidden = content.classList.contains('hidden');
                        if (isHidden) {
                            content.classList.remove('hidden');
                        } else {
                            content.classList.add('hidden');
                        }
                        
                        this.classList.toggle('active');
                        arrow.classList.toggle('rotate-180');
                    }
                });
            });

            function setupChecklist() {
                const checklistItems = document.querySelectorAll('input.checklist-item');
                const progressBar = document.getElementById('progress-bar');
                const progressText = document.getElementById('progress-text');
                const totalItems = checklistItems.length;
                const progressPopup = document.getElementById('progress-popup');
                const progressPopupIcon = document.getElementById('progress-popup-icon');
                const progressPopupMessage = document.getElementById('progress-popup-message');
                let progressPopupTimeout;

                function updateProgress(itemWasJustChecked) {
                    if (!progressBar || !progressText) return;
                    const checkedItems = document.querySelectorAll('input.checklist-item:checked').length;
                    const percentage = totalItems > 0 ? Math.round((checkedItems / totalItems) * 100) : 0;
                    
                    progressBar.style.width = percentage + '%';
                    progressText.textContent = percentage + '%';

                    clearTimeout(progressPopupTimeout);
                    progressPopup.classList.add('opacity-0', 'translate-y-4');

                    if (itemWasJustChecked) {
                        let message = '';
                        let icon = '';

                        if (percentage === 100) {
                            message = 'Tuy·ªát v·ªùi! B·∫°n ƒë√£ ho√†n th√†nh xu·∫•t s·∫Øc v√† l√† m·ªôt t·∫•m g∆∞∆°ng 5S!';
                            icon = 'üèÜ';
                        } else if (percentage >= 75) {
                            message = 'Th·∫≠t ƒë√°ng ng∆∞·ª°ng m·ªô! B·∫°n g·∫ßn ƒë·∫øn ƒë√≠ch r·ªìi.';
                            icon = 'üéâ';
                        } else if (percentage >= 50) {
                            message = 'B·∫°n ƒëang ti·∫øn b·ªô v∆∞·ª£t b·∫≠c! H√£y gi·ªØ v·ªØng phong ƒë·ªô nh√©.';
                            icon = 'ü§©';
                        } else if (percentage >= 25) {
                            message = 'B·∫°n ƒëang l√†m r·∫•t t·ªët! H√£y ti·∫øp t·ª•c ph√°t huy.';
                            icon = 'üëç';
                        } else if (percentage > 0) {
                            message = 'M·ªói b∆∞·ªõc nh·ªè ƒë·ªÅu ƒë√°ng qu√Ω. C·ªë l√™n nh√©!';
                            icon = 'üå±';
                        }

                        if (message) {
                            progressPopupIcon.textContent = icon;
                            progressPopupMessage.textContent = message;
                            progressPopup.classList.remove('opacity-0', 'translate-y-4');

                            progressPopupTimeout = setTimeout(() => {
                                progressPopup.classList.add('opacity-0', 'translate-y-4');
                            }, 4000);
                        }
                    }
                }

                checklistItems.forEach(item => {
                    item.addEventListener('change', () => {
                        updateProgress(item.checked);
                    });
                });
                updateProgress(false);
            }
            
            // New script for intro navigation
            function setupIntroNav() {
                const introNavLinks = document.querySelectorAll('.intro-nav-link');
                const introSections = [
                    document.getElementById('co2-section'),
                    document.getElementById('checklist-section'),
                    document.getElementById('form-section')
                ];
                
                const observer = new IntersectionObserver((entries) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const id = entry.target.id;
                            introNavLinks.forEach(link => {
                                link.classList.toggle('active', link.getAttribute('href') === `#${id}`);
                            });
                        }
                    });
                }, { rootMargin: "-50% 0px -50% 0px" });

                introSections.forEach(section => {
                    if (section) {
                        observer.observe(section);
                    }
                });
            }

            showSectionFromHash();
            setActiveTab('s1', 'outlook');
            setActiveTab('s2', 'outlook');
            setupChecklist();
            setupIntroNav(); // Initialize the new navigation
        });
    </script>
</body>
</html>
